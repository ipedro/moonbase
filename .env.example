# Cloudflare API credentials
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ZONE=yourdomain.com

# Code Server password (for remote web IDE access)
CODE_SERVER_PASSWORD=changeme

# GitHub Personal Access Token (for self-hosted runner)
# Needs repo scope: https://github.com/settings/tokens
GITHUB_PAT=your_github_pat_here

# Path to external storage for media/downloads
# Example: /mnt/external
DATA_ROOT=/home/pi/data

# n8n Configuration
# Generate a random key: docker run --rm n8nio/n8n n8n-encryption-key-gen
N8N_ENCRYPTION_KEY=
N8N_HOST=moonbase.yourdomain.com
N8N_WEBHOOK_URL=https://n8n.moonbase.yourdomain.com

# Discord Webhooks for n8n notifications
DISCORD_WEBHOOK_MEDIA=
DISCORD_WEBHOOK_DOWNLOADS=
DISCORD_WEBHOOK_INFRA=

# VPN Configuration (Gluetun)
# Defaults to AirVPN (WireGuard)
VPN_SERVICE_PROVIDER=airvpn
VPN_WIREGUARD_PRIVATE_KEY=
VPN_WIREGUARD_PRESHARED_KEY=
VPN_WIREGUARD_ADDRESSES=10.x.x.x/32
VPN_SERVER_COUNTRIES=Netherlands

# Tailscale Auth Key (Optional but recommended)
# Create one at: https://login.tailscale.com/admin/settings/keys
# Tag it as 'tag:server' to make it non-expiring
TAILSCALE_AUTH_KEY=
